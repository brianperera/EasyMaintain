@model EasyMaintain.WebUI.Models.ComponentWorkModel

<h1 class="text-light">Edit Work Order</h1>



    <div class="tabcontrol2" data-role="tabcontrol" data-on-tab-click="tab_click" data-on-tab-change="tab_change">
        <ul class="tabs">
            <li><a href="#frame_1">View/Edit Order</a></li>
            <li><a href="#frame_2">Componant History</a></li>
            <li><a href="#frame_3">Flight Details</a></li>
            <li><a href="#frame_4">Delivery Details</a></li>
            <li><a href="#frame_5">Close Work Order</a></li>
        </ul>
        <div class="frames">
            <div class="frame"  name="viewedit" id="frame_1">
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true)

                <div class="example">
                    <div class="flex-grid">
                        <div class="row cells2">
                            <div class="cell-form margin-right-10 cell size4">
                                <label>Component Name</label>
                                <div class="input-control text full-size">
                                    @Html.TextBoxFor(m => m.ComponentName, new { id = "txtPlace", Value = Model.ComponentWorkOrders[0].Component })
                                </div>
                            </div>
                            <div class="cell-form margin-right-10 cell size4">
                                <label class="display-block">Workshop</label>
                                <div class="input-control select full-size">
                                    @Html.DropDownListFor(m => m.WorkshopLocation, new SelectList(Model.Workshops, Model.ComponentWorkOrders[0].Location))
                                </div>
                            </div>
                            <div class="cell-form margin-right-10 cell size4">
                                <label class="display-block">Creation Date</label>
                                <div class="input-control select full-size">
                                    @Model.ComponentWorkOrders[0].CreatedDate
                                </div>
                            </div>
                        </div>
                        <div class="row cells2">
                            <div class="cell-form margin-right-10 cell size4">
                                <label>Serial Number</label>
                                <div class="input-control text full-size">
                                    @Html.TextBoxFor(m => m.SerialNumber, new { id = "txtPlace", Value = Model.ComponentWorkOrders[0].SerialNumber })
                                </div>
                            </div>
                            <div class="cell-form margin-right-10 cell size4">
                                <label>Flight Number</label>
                                <div class="input-control text full-size">
                                    @Html.TextBoxFor(m => m.FlightNumber, new { id = "txtPlace", Value = Model.ComponentWorkOrders[0].FlightNumber })
                                </div>
                            </div>
                        </div>
                        <div class="row cells2">
                            <div class="cell-form margin-right-10 cell size4">
                                <label class="display-block">Description</label>
                                <div class="input-control textarea full-size">
                                    @Html.TextAreaFor(m => m.Description, new { id = "txtPlace", Value = Model.ComponentWorkOrders[0].Description })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="button primary" onclick="pushMessage('info')"><span class="mif-plus"></span> Save</button>
            </div>
            <div class="frame"  name="componantHistory" id="frame_2">
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true)

    <div class="example">
        <div class="flex-grid">
            <div class="row cells2">
                <div class="cell-form margin-right-10 cell size4">
                    <label class="display-block">Component S/N</label>
                    <div class="input-control select full-size">
                        @Html.TextBoxFor(m => m.ComponentName, new { id = "componentNumber", Value = Model.ComponentWorkOrders[0].Component })
                    </div>
                </div>
            </div>
            <div class="row cells2">
                <div class="cell-form margin-right-10 cell size4">
                    <label>Component Name</label>
                    <div class="input-control text full-size">
                        @Html.TextBoxFor(m => m.ComponentName, new { id = "componentName", Value = Model.ComponentWorkOrders[0].Component })
                    </div>
                </div>
            </div>
            <div class="row cells2">
                <div class="cell-form margin-right-10 cell size4">
                    <label class="display-block">Description</label>
                    <div class="input-control textarea full-size">
                        @Html.TextAreaFor(m => m.Description, new { id = "Componentdescription", Value = Model.ComponentWorkOrders[0].Description })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button class="button primary" onclick="pushMessage('info')"><span class="mif-plus"></span> Save</button>
</div>
            <div class="frame"  name="flightDetails" id="frame_3">@Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true)

            <div class="example">
                <div class="flex-grid">
                    <div class="row cells2">
                        <div class="cell-form margin-right-10 cell size4">
                            <label class="display-block">Flight Number</label>
                            <div class="input-control select full-size">
                                @Html.TextBoxFor(m => m.ComponentName, new { id = "flightNumber", Value = Model.ComponentWorkOrders[0].Component })
                            </div>
                        </div>
                    </div>
                    <div class="row cells2">
                        <div class="cell-form margin-right-10 cell size4">
                            <label>Flight Model</label>
                            <div class="input-control text full-size">
                                @Html.TextBoxFor(m => m.ComponentName, new { id = "flightModel", Value = Model.ComponentWorkOrders[0].Component })
                            </div>
                        </div>
                    </div>
                    <div class="row cells2">
                        <div class="cell-form margin-right-10 cell size4">
                            <label class="display-block">Description</label>
                            <div class="input-control textarea full-size">
                                @Html.TextAreaFor(m => m.Description, new { id = "txtPlace", Value = Model.ComponentWorkOrders[0].Description })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <button class="button primary" onclick="pushMessage('info')"><span class="mif-plus"></span> Save</button>
            </div>
            <div class="frame"  name="deliveryDetails" id="frame_4">
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true)

                <div class="example">
                    <div class="flex-grid">
                        <div class="row cells2">
                            <div class="cell-form margin-right-10 cell size4">
                                <label class="display-block">Delivery Method</label>
                                <div class="input-control select full-size">
                                    @Html.DropDownListFor(m => m.WorkshopLocation, new SelectList(Model.Workshops), new { @class = "DeliveryMethod" })
                                </div>
                            </div>
                            <div class="cell-form margin-right-10 cell size4">
                                <label>Delivery Date</label>
                                <div class="input-control text full-size">
                                    <div class="input-control text" id="datepicker">
                                        <input type="text">
                                        <button class="button"><span class="mif-calendar"></span></button>
                                    </div>
                                </div>
                            </div>
                            <div class="cell-form margin-right-10 cell size4">
                                <label>Address</label>
                                <div class="input-control text full-size">
                                    <div class="input-control text full-size">
                                        @Html.TextBoxFor(m => m.ComponentName, new { @class = "LineOne", placeholder = "Line 1" })
                                    </div>
                                    <div class="input-control text full-size">
                                        @Html.TextBoxFor(m => m.ComponentName, new { @class = "LineTwo", placeholder = "Line 2" })
                                    </div>
                                    <div class="input-control text full-size">
                                        @Html.TextBoxFor(m => m.ComponentName, new { @class = "City", placeholder = "City" })
                                    </div>
                                    <div class="input-control text full-size">
                                        @Html.TextBoxFor(m => m.ComponentName, new { @class = "State", placeholder = "State" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row cells2">
                            <div class="cell-form margin-right-10 cell size4">
                                <label>Person InCharge</label>
                                <div class="input-control text full-size">
                                    @Html.TextBoxFor(m => m.ComponentName, new { @class = "PersonInCharge", placeholder = "Person InCharge" })
                                </div>
                            </div>
                        </div>
                        <div class="row cells2">
                            <div class="cell-form margin-right-10 cell size4">
                                <label class="display-block">Additional Notes</label>
                                <div class="input-control textarea full-size">
                                    @Html.TextAreaFor(m => m.Description, new { @class = "ShippingNotes", placeholder = "Additional Notes" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="frame"  name="closeWorkOrder" id="frame_5">5</div>
        </div>
    </div>



    <script>
    function tab_click(tab){
        console.log(tab);
        return true;
    }
    function tab_change(tab){
        console.log(tab);
    }
    </script>




