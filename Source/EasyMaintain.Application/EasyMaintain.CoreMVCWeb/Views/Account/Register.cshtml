@model EasyMaintain.CoreWebMVC.Models.RegisterViewModel

@{
    Layout = "";
}

@{
    ViewData["Title"] = "Register";
}

<head>

    <link href="~/Content/metro.css" rel="stylesheet" />
    <link href="~/Content/metro-icons.css" rel="stylesheet" />
    <link href="~/Content/metro-responsive.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style>
        .login-form {
            width: 25rem;
            position: absolute;
            top: 50%;
            margin-top: -9.375rem;
            margin-bottom: 9.375rem;
            left: 50%;
            margin-left: -12.5rem;
            background-color: #ffffff;
            opacity: 0;
            -webkit-transform: scale(.8);
            transform: scale(.8);
        }
    </style>

    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/metro.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>


<body class="bg-darkCyan">
    <div class="login-form padding30 block-shadow" style="opacity: 1; transform: scale(1); transition: 0.5s;">
        <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            @Html.AntiForgeryToken()
            <h1 class="text-light">Register to service</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <hr class="thin">
            <br>
            <div class="input-control text full-size" data-role="input">
                <label for="user_login">Name:</label>
                @Html.TextBoxFor(m => m.Name)
                <button class="button helper-button clear" tabindex="-1" type="button"><span class="mif-cross"></span></button>
            </div>
            <br>
            <br>
            <div class="input-control text full-size" data-role="input">
                <label for="user_login">User ID:</label>
                @Html.TextBoxFor(m => m.Username)
                <button class="button helper-button clear" tabindex="-1" type="button"><span class="mif-cross"></span></button>
            </div>
            <br>
            <br>
            <div class="input-control password full-size" data-role="input">
                <label for="user_password">Password:</label>
                @Html.PasswordFor(m => m.Password)
                <button class="button helper-button reveal" tabindex="-1" type="button"><span class="mif-looks"></span></button>
            </div>
            <br>
            <br>
            <div class="input-control password full-size" data-role="input">
                <label for="user_password">Confirm Password:</label>
                @Html.PasswordFor(m => m.ConfirmPassword)
                <button class="button helper-button reveal" tabindex="-1" type="button"><span class="mif-looks"></span></button>
            </div>
            <br>
            <br>
            <div class="input-control text full-size" data-role="input">
                <label for="user_login">Email:</label>
                @Html.TextBoxFor(m => m.Email)
                <button class="button helper-button clear" tabindex="-1" type="button"><span class="mif-cross"></span></button>
            </div>
            <br>
            <br>
            <div class="input-control text full-size" data-role="input">
                <label for="user_login">Phone Number:</label>
                @Html.TextBoxFor(m => m.PhoneNumber ,new { @type = "number" })
                <button class="button helper-button clear" tabindex="-1" type="button"><span class="mif-cross"></span></button>
            </div>
            <br>
            <br>
            <div class="form-actions">
                <button type="submit" class="button primary">Login</button>
                <button type="button" class="button link">Cancel</button>
            </div>
        </form>

    </div>
</body>



