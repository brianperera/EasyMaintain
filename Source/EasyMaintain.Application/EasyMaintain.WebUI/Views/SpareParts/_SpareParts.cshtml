@model EasyMaintain.WebUI.Models.SparePartsViewModel

<h1 class="text-light">Spare Parts</h1>

@using (Html.BeginForm("SpareParts", "SpareParts", new { ReturnUrl = "SpareParts" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true)

    <div class="example">
        <div class="grid">
            <div class="row cells2">
                <div class="cell">
                    <div class="input-control text full-size">
                        @Html.TextBoxFor(m => m.Name, new { placeholder = "Name" })
                    </div>
                </div>
                <div class="cell">
                    <div class="input-control text full-size">
                        @Html.TextBoxFor(m => m.Description, new { placeholder = "Description" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button class="button primary" onclick="pushMessage('info')"><span class="mif-plus"></span> Create</button>
    <button class="button warning" onclick="pushMessage('warning')"><span class="mif-loop2"></span> Update</button>
    <button class="button alert" onclick="pushMessage('alert')"><span class="mif-cross"></span> Delete</button>
}

