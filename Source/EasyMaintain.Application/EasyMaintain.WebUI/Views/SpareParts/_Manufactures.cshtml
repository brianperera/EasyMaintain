@model EasyMaintain.WebUI.Models.ManufacturerViewModel

<h1 class="text-light">Manufacrurers</h1>

@using (Ajax.BeginForm("AddManufacturer", new AjaxOptions { HttpMethod = "POST", InsertionMode = System.Web.Mvc.Ajax.InsertionMode.Replace, UpdateTargetId = "partial-view-container" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true)

    <table class="grid">
        <tr>
            <td class="cell">Manufacturer Name &nbsp; &nbsp; : &nbsp; &nbsp;</td>
            <td class="row cells2">
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Name" })
            </td>
            <td><span></span></td>
        </tr>

        <tr>
            <td class="cell">Description &nbsp; &nbsp; : &nbsp; &nbsp;</td>
            <td class="row cells2">
                @Html.TextAreaFor(m => m.Description, new { placeholder = "Description", cols = "20", rows = "2", style = "margin: 0px; width: 195px; height: 102px;" })
            </td>
        </tr>

        <tr>
            <td class="cell">Additional Data &nbsp; &nbsp; : &nbsp; &nbsp;</td>
            <td class="row cells2">
                @Html.TextAreaFor(m => m.AdditionalData, new { placeholder = "Additional Data", cols = "20", rows = "2", style = "margin: 0px; width: 195px; height: 102px;" })
            </td>
        </tr>
    </table>
    <hr />

    <button class="button primary" onclick="pushMessage('info')"><span class="mif-plus"></span> Create</button>
    <button class="button warning" onclick="pushMessage('warning')"><span class="mif-loop2"></span> Update</button>
    <button class="button alert" onclick="pushMessage('alert')"><span class="mif-cross"></span> Delete</button>
}

<hr class="thin bg-grayLighter">
<table class="dataTable border bordered" data-role="datatable" data-auto-width="false">
